<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.yezp.read_write_01.mapper.PersonMapper">

	<select id="getPersonList" resultType="com.yezp.read_write_01.domain.Person">
		select id, `name` from person
	</select>
	
	<insert id="insertPerson" parameterType="com.yezp.read_write_01.domain.Person">
		INSERT INTO PERSON(id, `name`) VALUES (#id#, #name#);
	</insert>

</mapper>